/* pages/changePassword/changePassword.wxss */
page{
  background: #fff;
}
/* 标题 */
.changePassword-title{
  height:42px;
  line-height:42px;
}
.changePassword-title .title-left{
  width: 2.5px;
	height: 11px;
	background-color: #2e59d4;
	border-radius: 1.3px;
	opacity: 0.67;
  float:left;
  margin:15.5px 11.5px 0 21px;
}
.changePassword-title .title-right{
  font-family: PingFang-SC-Medium;
	font-size: 12px;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #a8a8a8;
  float:left;
}

.changePassword-mobile{
  height:60px;
  line-height:60px;
  border-bottom:1px solid #eaeaea;
}
.changePassword-mobile .left{
  font-family: PingFang-SC-Medium;
	font-size: 15px;
	font-weight: normal;
  width:116px;
	color: #333333;
  text-indent:27px;
  float:left;
}
.changePassword-mobile .right{
  font-family: PingFang-SC-Medium;
	font-size: 15px;
  height:60px;
  line-height:60px;
  width:calc(100% - 116px);
	font-weight: normal;
	color: #989898;
  float:left;
}

.changePassword-code{
  height:60px;
  line-height:60px;
  border-bottom:1px solid #eaeaea;
}
.changePassword-code .left{
  font-family: PingFang-SC-Medium;
	font-size: 15px;
	font-weight: normal;
  width:116px;
	color: #333333;
  text-indent:27px;
  float:left;
}
.changePassword-code .right{
  font-family: PingFang-SC-Medium;
	font-size: 15px;
  height:60px;
  line-height:60px;
  width:calc(100% - 221px);
	font-weight: normal;
	color: #989898;
  float:left;
}
.changePassword-code .codeBorder{
  position:absolute;
  left:0;
  top:20px;
  height:20px;
  width:1px;
 	background-color: #4d6ce3;
	border-radius: 0.3px;
}
.changePassword-code .codeBtn{
  text-align:center;
  position: relative;
  float:left;
  width:105px;  
  font-family: PingFang-SC-Medium;
	font-size: 12px;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #4d6ce3;
}


.changePassword-password{
  position:relative;
  border-bottom:1px solid #eaeaea;
}
.changePassword-password .left{
  font-family: PingFang-SC-Medium;
	font-size: 15px;
  height:60px;
  line-height:60px;
	font-weight: normal;
  width:116px;
	color: #333333;
  text-indent:27px;
  float:left;
}
.changePassword-password .right{
  font-family: PingFang-SC-Medium;
	font-size: 15px;
  height:60px;
  line-height:60px;
  color: #989898;
  width:calc(100% - 152px);
	font-weight: normal;
  float:left;
}
 .changePassword-password .right-img{
  width:20px;
  height:14px;
  margin:23px 0 0 0;
}


.changePassword-sub{
  position:fixed;
  bottom:0;
  left:0;
  right:0;
}
.changePassword-sub-btn{
  width:100%;
  line-height:48px;
  height: 48px;
	background-color: #4d6ce3;
  font-family: PingFang-SC-Bold;
	font-size: 17px;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0.5px;
	color: #ffffff;
}
.clearfix:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}

.hide{
 display: none;
}
.show{ 
 display: block;
}