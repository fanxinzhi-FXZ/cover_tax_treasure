.orderInfo-pirce .pirce-title .title-img{
  float:left;
  width: 5rpx;
	height: 21rpx;
	background-color: rgba(46, 89, 212, 0.67);
	border-radius: 2.5rpx;
	opacity: 0.67;
  margin:31rpx 0 0 0;
