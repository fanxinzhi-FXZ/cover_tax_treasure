.orderInfo-pirce .pirce-title .title-text{
  float:left;
  font-family: PingFang-SC-Medium;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #a8a8a8;
  text-indent:10rpx;
}

.orderInfo-pirce .pirce-item{
  height:40rpx;
  padding:0 29rpx;
  margin:35rpx 0;
}
.orderInfo-pirce .pirce-item .item-left{
  float:left;
  height:40rpx;
  line-height:40rpx;
  font-family: PingFang-SC-Medium;
	font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
}
.orderInfo-pirce .pirce-item .item-lef .left-text{
  color:#333333;
}
.orderInfo-pirce .pirce-item .item-right{
  float:right;
  text-align:right;
}
.orderInfo-pirce .pirce-item .item-right .right-top{
  height:20rpx;
  line-height:20rpx;
  font-family: PingFang-SC-Regular;
	font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
}
.orderInfo-pirce .pirce-item .item-right .right-bottom{
  height:20rpx;
  line-height:20rpx;
  font-family: PingFang-SC-Regular;
	font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #808080;
}

.orderInfo-pirce .pirce-amt{
  height:81rpx;
  line-height:81rpx;
  padding:0 29rpx;
  border-top:1rpx solid #ebebeb;
}

.orderInfo-pirce .pirce-amt .amt-left{
	font-family: PingFang-SC-Medium;
	font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
  float:left;
}

.orderInfo-pirce .pirce-amt .amt-right{
  font-family: PingFang-SC-Medium;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
  float:right;
}

.pirce-memo{
  height:107rpx;
  background:#fff;
  margin:20rpx 0 96rpx 0;
  padding:26rpx 29rpx 0;
}
.pirce-memo .memo-orderno{
  height: 19rpx;
	font-family: PingFang-SC-Regular;
	font-size: 20rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #989898;
  margin:0 0 19rpx 0;
}

.pirce-memo .memo-time{
  height: 19rpx;
	font-family: PingFang-SC-Regular;
	font-size: 20rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #989898;
}

.orderInfo-btn{
  height: 96rpx;
  line-height:96rpx;
	background-color: #4d6ce3;
  position:fixed;
  bottom:0;
  left:0;
  right:0;
  text-align:center;
}
.orderInfo-btn .btn{
  font-family: PingFang-SC-Bold;
	font-size: 34rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0.9rpx;
	color: #ffffff;
}