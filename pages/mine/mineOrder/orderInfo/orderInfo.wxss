page{
  background: #f9f9f9;
}
/* 支付状态 */
.orderInfo-status{
  height:190rpx;
  background: #fff;
  text-align:center;
  padding:64rpx 0 0 0;
}
.orderInfo-status .status-memo{
  height: 31rpx;
	font-family: PingFang-SC-Bold;
	font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #fe8e4a;
  margin:0 0 22rpx 0;
}
.orderInfo-status .status-time{
	height: 25rpx;
	font-family: PingFang-SC-Medium;
	font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #fe8e4a;
}
.orderInfo-statusSuc{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height:190rpx;
  background: #fff;
  text-align:center;
}
.orderInfo-statusSuc .status-img{
  width:33rpx;
  height:33rpx;
}

.orderInfo-statusSuc .status-pay{
  font-family: PingFang-SC-Bold;
	font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #52c68b;
  margin:0 0 0 21rpx;
}
/* 购买人信息 */
.orderInfo-buyInfo{
  background: #fff;
  padding:0 29rpx;
  margin:20rpx 0 0 0;
}
.orderInfo-buyInfo .buyInfo-title{
  height:80rpx;
  line-height:80rpx;
}
.orderInfo-buyInfo .buyInfo-title .title-img{
  float:left;
  width: 5rpx;
	height: 21rpx;
	background-color: rgba(46, 89, 212, 0.67);
	border-radius: 2.5rpx;
	opacity: 0.67;
  margin:31rpx 0 0 0;
}
.orderInfo-buyInfo .buyInfo-title .title-text{
  float:left;
  font-family: PingFang-SC-Medium;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #a8a8a8;
  text-indent:10rpx;
}

.orderInfo-buyInfo .buyInfo-item{
  padding:0 0 18rpx 0;
  border-top:1rpx solid #ebebeb;
}
.orderInfo-buyInfo .buyInfo-item .item-name{
  height: 29rpx;
	font-family: PingFang-SC-Medium;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
  margin:25rpx 0;
}

.orderInfo-buyInfo .buyInfo-item .item-info{
	font-family: PingFang-SC-Regular;
	font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #666666;
  width:100%;
  float:left;
  margin:0 0 25rpx 0;
}

.orderInfo-buyInfo .buyInfo-item .item-info .info-left{
  width:180rpx;
  float:left;
}

.orderInfo-buyInfo .buyInfo-item .item-info .info-right{
  float:left;
}

/* 订单详情 */
.orderInfo-pirce{
  background: #fff;
  margin:24rpx 0 0 0;
  padding:0 29rpx;
}
.orderInfo-pirce .pirce-title{
  height:80rpx;
  line-height:80rpx;
  border-bottom:1rpx solid #ebebeb;
