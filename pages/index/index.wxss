.index {

}

 /* 案例介绍 */
.index .case{
   
}
.index .case .title{
  display: block;
  height: 50px;
  line-height: 50px;
  font-size: 15px;
  color: #333333;
  padding: 0px 20px;
  background: url("http://www.beishuibao.com/web_pic/program/icon_line.png") left 15px center no-repeat;
  background-size: 2px 11px;
}
.index .case .content{
  width: 100vw;
  height: 53.5vw;
  display: block;
  white-space:nowrap;
  overflow-x: auto;
  -webkit-overflow-scrolling:touch;
}
.index .case .content .item{
  display: inline-block;
  width: 89.06vw;
  height: 51.2vw;
  background-image: url("http://www.beishuibao.com/web_pic/program/img_bg1.png");
  background-position: center center;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  white-space:normal;
  position: relative; 
}
.index .case .content .item .subtitle{
  position: absolute;
  bottom: 78px;
  left: 20px;
  display: block;
  width: 66px;
  height: 20px;
  line-height: 20px;
  text-align: center;
  font-size: 13px;
  color: #ffffff;
  background: url("http://www.beishuibao.com/web_pic/program/icon_label1.png") center center no-repeat;
  background-size: 100% 100%;
}
.index .case .content .item .box {
  position: absolute;
  bottom: 0px;
  margin: 0px 15px 12px 15px;
  padding: 5px;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 5px;
  white-space:normal;
}
.index .case .content .item .box .text{
  display: block;
  font-size: 9px;
	line-height: 12px;
	color: #fbfbfb;
  white-space:normal;
}


