.cart {

}
.cart .header {
  width: 100vw;
  height: 41.46vw;
}
.cart .content {
  padding-top: 24px;
}
.cart .content .item{
  display: block;
  height: 100px;
  margin: 0px 18px 10px 18px;
	background-color: #ffffff;
	box-shadow: 0px 1.5px 9px 0px	rgba(176, 176, 176, 0.23);
	border-radius: 7px;
}
.cart .content .item .icon{
  float: left;
  width: 38px;
  height: 38px;
  margin: 31px 20px;
}
.cart .content .item .title{
  float: left;
  height: 100px;
  line-height: 100px;
  text-align: left;
  font-size: 16px;
  color: #4d4d4d;
  font-weight: normal;
}
.cart .content .item .rigth {
  float: right;
  width: 120px;
  height: 100px;
}
.cart .content .item .rigth .money{
  display: block;
  text-align: center;
  font-size: 18px;
  color: #4d4d4d;
  padding-top: 30px;
}
.cart .content .item .rigth .more{
  display: block;
  text-align: center;
  font-size: 12px;
  color: #999999;
  margin-top: 5px;
  background: url("http://www.beishuibao.com/web_pic/program/icon_down1.png") right 20px center no-repeat;
  background-size: 8px 9px;
}